{
  "name": "@ai-werewolf/player",
  "version": "1.0.0",
  "description": "AI Werewolf player server",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:config": "node dist/index.js --config=",
    "dev": "bun --watch src/index.ts",
    "dev:config": "bun --watch src/index.ts --config=",
    "dev:default": "bun --watch src/index.ts --config=configs/default.json",
    "dev:aggressive": "bun --watch src/index.ts --config=configs/aggressive.json",
    "dev:conservative": "bun --watch src/index.ts --config=configs/conservative.json",
    "dev:witty": "bun --watch src/index.ts --config=configs/witty.json",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/openai": "*",
    "@ai-sdk/openai-compatible": "^1.0.2",
    "@ai-werewolf/lib": "workspace:*",
    "@ai-werewolf/types": "workspace:*",
    "@openrouter/ai-sdk-provider": "^0.7.3",
    "@types/cors": "^2.8.19",
    "ai": "*",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "uuid": "^9.0.0",
    "zod": "*"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.0",
    "jest": "^29.0.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}